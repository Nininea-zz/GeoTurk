@using GeoTurk.Models;
@using GeoTurk.Helpers;

@model List<HIT>

@{
    ViewBag.Title = "ჩემი ამოცანები";
    var hits = Model;
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                დასახელება
            </th>
            <th>
                აღწერა
            </th>
            <th>
                ხანგრძლივობა
            </th>
            <th>
                მოქმედების ვადა
            </th>
            <th>
                ტაგები
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hit in hits)
        {
            <tr>
                <td>@hit.Title</td>
                <td>@hit.Description</td>
                <td>@hit.DurationInMinutes წუთი</td>
                <td>@hit.ExpireDate.ToGeorgianDate()</td>
                <td>@hit.Tags</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu-@hit.HITID" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu-@hit.HITID">
                            @if (hit.PublishDate.HasValue)
                            {
                                <li><a href="#">Unpublish</a></li>
                            }
                            else
                            {
                                <li><a href="#">Publish</a></li>
                            }
                            <li role="separator" class="divider"></li>
                            <li><a href="@Html.Raw(Url.Action("EditHIT", "Requester", new { hitID = hit.HITID }))">Edit</a></li>
                            @if (hit.WorkerHITs == null || hit.WorkerHITs.Count == 0)
                            {
                                <li><a href="@Html.Raw(Url.Action("DeleteHIT", "Requester", new { hitID = hit.HITID }))">Delete</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
