@using GeoTurk.Helpers;

@model RequesterPageViewModel

@{
    ViewBag.Title = "მომთხოვნის გვერდი";
}

<div class="row" style="text-align:center;">
    <h3>
        <b>
            @ViewBag.Title
        </b>
    </h3>
</div>
<br />
<div class="col-md-6 col-md-offset-1">
    <div class="well center-block">
        <div class="row row-details">
            <div class="form-group">
                <label class="col-md-6" for="hits-count">დავალებები: </label>
                <div id="hits-count" class="col-md-4 value">
                    @Model.HitsCount
                </div>
            </div>
        </div>
        <hr />
        <div class="row row-details">
            <div class="form-group">
                <label class="col-md-6" for="completed-hits-count">დასრულებული დავალებები: </label>
                <div id="completed-hits-count" class="col-md-4 value">
                    @Model.CompletedHits
                </div>
            </div>
        </div>
        <hr />
        <div class="row row-details">
            <div class="form-group">
                <label class="col-md-6" for="last-completed-hits-count">ბოლო თვის დასრულებული დავალებები: </label>
                <div id="last-completed-hits-count" class="col-md-4 value">
                    @Model.LastMonthCompletedHits
                </div>
            </div>
        </div>
        <hr />
        <div class="row row-details">
            <div class="form-group">
                <label class="col-md-6" for="workers-count">შემსრულებლები: </label>
                <div id="workers-count" class="col-md-4 value">
                    @Model.WorkersCount
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4 col-md-offset-1">
    <div class="well center-block">
        <div class="row row-details">
            <div class="form-group">
                <label class="col-md-5" for="balance">ბალანსი: </label>
                <div id="balance" class="col-md-4 value">
                    @Model.Balance
                </div>
            </div>
        </div>
        @foreach (var transaction in Model.LastTransactions)
        {
            <hr />
            <div class="row row-details">
                <div class="form-group">
                    <label class="col-md-5" for="transaction-@transaction.TransactionLogID">@transaction.CreateDate.ToGeorgianDateTime(): </label>
                    <div id="transaction-@transaction.TransactionLogID" class="col-md-4 value">
                        @transaction.Amount ლარი
                    </div>
                </div>
            </div>
        }
        <hr />
        <a id="assign-hit" class="btn btn-primary btn-lg btn-block" href="@Url.Action("UserTransactions", "Account")">
            სრული ამონაწერი
        </a>
    </div>
</div>