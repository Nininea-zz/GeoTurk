@using GeoTurk.Models;
@using GeoTurk.Helpers;
@using System.Globalization;

@model HIT

@{
    ViewBag.Title = "დავალების რედაქტირება";
}

<h3>@ViewBag.Title</h3>
<br />


<div class="container">
    @using (Ajax.BeginForm("EditHIT", "Requester", new AjaxOptions { HttpMethod = "POST", OnSuccess = "showToastrOnFormSuccess" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HITID)
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.DurationInMinutes, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.DurationInMinutes, new { @class = "form-control", type = "number", min = "0", max = "9999.99", step = "0.01" })
                    @Html.ValidationMessageFor(model => model.DurationInMinutes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Instuction, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.Instuction, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Instuction, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    <label class="control-label pull-md-right" for="ExpireDate">ბოლო ვადა <span style="font-size: x-small; font-weight: normal;">(MM/dd/yyyy)</span></label>
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.ExpireDate, "{0:MM/dd/yyyy}", new { @class = "form-control", placeholder = "dd/MM/yyyy" })
                    @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.RelatedFilePath, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.RelatedFilePath, new { @class = "form-control", placeholder = "მიუთითეთ ფაილის მისამართი" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.WorkersCount, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.WorkersCount, new { @class = "form-control", type = "number", min = "1", max = "1000000", value = "1" })
                    @Html.ValidationMessageFor(model => model.WorkersCount, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Cost, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Cost, new { @class = "form-control", type = "number", min = "0", max = "99999999.99", step = "0.01" })
                    @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Tags, new { @class = "control-label pull-md-right" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Tags, new { @class = "form-control", placeholder = "tag1, tag2, tag3..." })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    <input type="submit" value="დავალების რედაქტირება" class="btn btn-primary pull-md-right" />
                </div>
            </div>
        </div>
    }
</div>